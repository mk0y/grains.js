{
  "name": "grains.js",
  "version": "0.1.0",
  "description": "A lightweight reactive micro-states management library for HTML",
  "type": "module",
  "main": "dist/grains.js",
  "module": "dist/grains.mjs",
  "types": "dist/grains.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.{js,ts,json,md}'",
    "check-format": "prettier --check 'src/**/*.{js,ts,json,md}'"
  },
  "keywords": [
    "reactive",
    "state-management",
    "javascript",
    "html",
    "dom"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@codecov/vite-plugin": "^1.9.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint": "^9.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.5.3",
    "rollup": "^4.9.6",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.26.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "microdiff": "^1.5.0",
    "rfdc": "^1.4.1"
  }
}
